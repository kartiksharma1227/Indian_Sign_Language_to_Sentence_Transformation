    grid-template-columns: minmax(820px, 1fr) 380px;
  }
  .detector-page-video-container { min-height: 520px; }
}

/* Tablets/phones: stack, but keep proportions reasonable */
@media (max-width: 1024px) {
  .detector-page-content { grid-template-columns: 1fr; }
  .detector-page-video-container { min-height: 360px; aspect-ratio: 16 / 9; }
  .detector-page-results-section { margin-top: var(--spacing-md); }
}
