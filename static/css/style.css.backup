/* === HOTFIX OVERRIDES === */

/* 1) Safer container utility (centers content consistently) */
.container,
.nav-container,
.hero-container,
.features-container,
.stats-container,
.cta-container,
.about-container,
.mission-container,
.technology-container,
.how-container {
  max-width: 1200px;
  margin-inline: auto;
  padding-inline: var(--spacing-md);
}

/* 2) Prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
  * { animation: none !important; transition: none !important; }
}

/* 3) Navbar: slightly more opaque + shadow only when scrolling */
.navbar {
  background: rgba(255,255,255,0.98);
  box-shadow: var(--shadow-sm);
}
body.scrolled .navbar { box-shadow: var(--shadow-md); }

/* 4) Hero: make overlay non-blocking and softer */
.hero { isolation: isolate; }
.hero::before {
  opacity: 0.25;
  pointer-events: none;        /* <— clicks go through */
  background-size: 600px 600px;
}

/* Responsive, not over-tall hero */
.hero-content {
  min-height: unset;
  align-items: start;
  padding-block: var(--spacing-2xl);
}
.hero-title { font-size: clamp(2rem, 4vw + 1rem, 3.5rem); }

/* 5) Floating cards: keep fully on-screen; use transforms instead of negative offsets */
.floating-card { 
  left: auto; right: auto; top: auto; bottom: auto;
  animation: floatCard 8s ease-in-out infinite;
}
.card-1 { transform: translate(0,0); margin-inline-start: -5%; margin-block-start: 5%; }
.card-2 { transform: translate(0,0); margin-inline-end: -3%; margin-block-start: 10%; }
.card-3 { transform: translate(0,0); margin-inline-start: 10%; margin-block-end: 5%; }
@media (max-width: 1024px) {
  .card-1, .card-2, .card-3 { margin: var(--spacing-md) auto; }
}

/* 6) Buttons always clickable above overlays */
.btn { position: relative; z-index: 2; }

/* 7) Feature/tech grids: relax min card width for smaller laptops */
.features-grid,
.tech-grid,
.features-list,
.process-steps {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* 8) Stats numbers: avoid giant jumps on small screens */
.stat-number { font-size: clamp(2rem, 5vw, 3rem); }

/* 9) CTA: improve contrast/readability */
.cta { background: linear-gradient(135deg, #0ea5e9 0%, #10b981 100%); }

/* 10) Mobile nav: ensure slide-in works and sits above hero */
.nav-menu {
  z-index: 1100;
  will-change: left;
}
.nav-menu a { padding: var(--spacing-md) var(--spacing-xl); }

/* 11) Detector page: unify naming + remove rigid heights */
.detector-page-detector,
.detector-page {
  padding: var(--spacing-xl) 0;
  background: var(--gray-50);
  min-height: auto;
}

.detector-page-container,
.detector-page-detector-container {
  max-width: 1200px;
  margin-inline: auto;
  padding-inline: var(--spacing-md);
  min-height: auto;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

/* Consolidate content layout */
.detector-page-content,
.detector-page-detector-content {
  display: grid;
  grid-template-columns: 420px 1fr;
  gap: var(--spacing-lg);
  align-items: start;
  min-height: 0;
}
@media (max-width: 1024px) {
  .detector-page-content,
  .detector-page-detector-content { grid-template-columns: 1fr; }
}

/* Remove hard heights so cards expand naturally */
.detector-page-video-section,
.detector-page-results-section { height: auto; }

/* Video container: let it size responsively, no overflow cropping on narrow screens */
.detector-page-video-container {
  max-width: 100%;
  aspect-ratio: 4 / 3;
}
.detector-page-video-canvas { object-fit: contain; }

/* Results panels readable */
.detector-page-results-section {
  background: var(--gray-900);
}
.detector-page-detection-display > div {
  background: var(--gray-800);
  border-color: var(--gray-700);
}

/* 12) Typography polish */
.section-title { font-size: clamp(1.75rem, 2.5vw + 1rem, 3rem); }
.section-description { font-size: clamp(1rem, 1vw + 0.75rem, 1.25rem); }

/* 13) Status toasts: ensure on top & readable */
.status-message {
  z-index: 1200;
  filter: drop-shadow(0 6px 18px rgba(0,0,0,0.15));
}

/* 14) Small-screen tune-ups */
@media (max-width: 768px) {
  .hero-buttons { gap: var(--spacing-sm); }
  .detector-page-control-buttons .btn { padding: 10px 14px; }
}

/* 15) Subtle card hover on touch devices off */
@media (hover: none) {
  .feature-card:hover,
  .tech-card:hover { transform: none; box-shadow: var(--shadow-md); }
}


